script/source = "extends CharacterBody2D

const SPEED = 200.0
const JUMP_VELOCITY = -500
var gravity = ProjectSettings.get_setting(\"physics/2d/default_gravity\")

var velocidad_ataque = 300
var permiso_atacar = true
var permiso_mover = true
var permiso_idle = true
var angulo = 0
var loking = Vector2.RIGHT
var last_direction = 1
var up = Vector2.UP
var der = \"key_D\"
var izq = \"key_A\"
var quemandose = false
var hp = 30

@onready var animated_sprite_2d = $Pivot/AnimatedSprite2D
@onready var pivot = $Pivot
@onready var hitbox = $CollisionShape2D
@onready var posicion_hitbox = hitbox.get(\"position\")
@onready var dead_timer = $DeadTimer
@onready var attack_timer = $AttackTimer
@export  var puntos = 0
@onready var snake = $\"../Snake\"
@onready var world = $\"..\"
@onready var selector = world.get_node(\"%gs_selector\")
@onready var fire_button = world.get_node(\"%gs_fire\")
@onready var water_button = world.get_node(\"%gs_water\")
@onready var thunder_button = world.get_node(\"%gs_thunder\")

@onready var audio_stream_player = $AudioStreamPlayer
@onready var audio_stream_player_2 = $AudioStreamPlayer2
@onready var audio_stream_player_3 = $AudioStreamPlayer3
@onready var audio_stream_player_4 = $AudioStreamPlayer4

var normal_attack = preload(\"res://Utility/attacks/normal_attack.tscn\")
var water_attack = preload(\"res://Utility/attacks/water_attack.tscn\")
var fire_attack = preload(\"res://Utility/attacks/fire_attack.tscn\")
var thunder_attack = preload(\"res://Utility/attacks/thunder_attack.tscn\")
var selected_power = water_attack

var poderes = {\"fire\": 0, \"water\": 0, \"thunder\": 0}
var labels = [\"fire\", \"water\", \"thunder\"]
var indice = 0

func rotar():
	var sentido = Input.get_axis(\"key_S\",\"key_X\")
	rotation += 0.1 * sentido
	loking = Vector2.from_angle(rotation)
	
	
func power_selection():
	if Input.is_action_just_pressed(\"key_z\"):
		indice = (indice - 1) % 3
	if Input.is_action_just_pressed(\"key_c\"):
		indice = (indice + 1) % 3

	print(\"Poder seleccionado: \", labels[indice])

	match labels[indice]:
		\"fire\":
			selected_power = fire_attack
			selector.global_position = fire_button.global_position + Vector2(-17, -65)
		\"water\":
			selected_power = water_attack
			selector.global_position = water_button.global_position + Vector2(-17, -65)
		\"thunder\":
			selected_power = thunder_attack
			selector.global_position = thunder_button.global_position + Vector2(-17, -65)

func stun():
	permiso_mover = false

func release_stun():
	permiso_mover = true


func invert_input():
	der = \"key_A\"
	izq = \"key_D\"

func release_inversion():
	izq = \"key_A\"
	der = \"key_D\"
	
func attack():
	var poder = poderes[labels[indice]]
	var _attack

	if poder == 0:
		_attack = normal_attack.instantiate()
	else:
		poderes[labels[indice]] -= 1
		_attack = selected_power.instantiate()

	_attack.set_collision_layer_value(2, true)
	var pivot = _attack.get_node(\"%Pivot\")
	_attack.target = loking
	_attack.speed = velocidad_ataque
	pivot.scale.x = -sign(loking.x)
	if rotation>0:
		_attack.position = global_position 
		pivot.rotation = loking.angle()
		if rotation > 1.5707:
			pivot.scale.x = sign(loking.x)
	else:
		_attack.position = global_position
	attack_timer.start()
	permiso_atacar = false
	add_child(_attack)

func _ready():
	pass

func _physics_process(delta):
	#muerte por caÃ­da al precipicio 
	if $\".\".position.y>1170 and $\".\".position.y<1200:
		animated_sprite_2d.play(\"die\")
		audio_stream_player_4.play()
		dead_timer.wait_time = 1
		dead_timer.start()
		snake.puntos += 1
		world.save_data()
		
	power_selection()

	if hp>0 and permiso_idle:
		animated_sprite_2d.play(\"idle\")
	
		if Input.is_action_just_pressed(\"key_L\"):
			if permiso_atacar:
				permiso_idle = false
				animated_sprite_2d.play(\"attack\")
				permiso_atacar = false
				attack_timer.wait_time = 1
				attack_timer.start()
				attack()
				audio_stream_player_2.play()
		
	if not is_on_floor():
		rotar()
		#gravedad
		velocity.y += 1100 * delta
	
	if is_on_floor():
		rotation = 0
		loking = Vector2.from_angle(rotation)
	
	#movimiento normal
	if not permiso_mover:
		move_and_slide()
		return
 
	var direction = Input.get_axis(izq, der)
	if direction:
		velocity.x = direction * SPEED
		loking = loking*direction
		last_direction = direction
		
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)
		loking = loking*last_direction
	
	#saltar
	if Input.is_action_just_pressed(\"key_W\") and is_on_floor():
		velocity.y = JUMP_VELOCITY
		audio_stream_player.play()
		
	if direction!=0:
		pivot.scale.x = sign(direction)
		if direction==-1:
			hitbox.position.x = -1.5
		
		if direction==1:
			hitbox.position.x = 1.5
	
	
	move_and_slide()
	

func _on_hurt_box_green_area_entered(area):
	if not area.is_in_group(\"attack\"):
		return
		
	area._on_enemy_hit(self)
	var damage = area.damage
	hp -= damage
	audio_stream_player_3.play()
	if hp <= 0:
		animated_sprite_2d.play(\"die\")
		audio_stream_player_4.play()
		dead_timer.wait_time = 1
		dead_timer.start()
		snake.puntos+=1
		world.save_data()

func _on_dead_timer_timeout():
	queue_free()
	get_tree().change_scene_to_file(\"res://scenes/general.tscn\")

func _on_attack_timer_timeout():
	permiso_idle = true
	permiso_atacar = true

func hurt(damage):
	hp -= damage
	audio_stream_player_3.play()
	if hp <= 0:
		animated_sprite_2d.play(\"die\")
		audio_stream_player_4.play()
		dead_timer.wait_time = 1
		dead_timer.start()
		snake.puntos += 1
		world.save_data()
"

